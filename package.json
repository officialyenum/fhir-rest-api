  "license": "ISC",
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/jest": "^29.5.14",
    "@types/serverless": "^3.12.27",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.1.3",
    "serverless": "^3.40.0",
    "serverless-plugin-typescript": "^2.1.5",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "aws-lambda": "^1.0.7",
    "dotenv": "^16.4.7"
  }
}
